---
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <link rel="stylesheet" href="/styles/global.css">
  <script>
    if (typeof localStorage !== 'undefined') {
      const savedTheme = localStorage.getItem('theme') || 
        (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
      document.documentElement.classList.toggle('dark', savedTheme === 'dark');
    }
  </script>
</head>
<body class="bg-gradient-to-b from-slate-50 to-blue-50 dark:from-slate-900 dark:to-slate-800 flex flex-col min-h-screen text-slate-900 dark:text-slate-200"> {/* Added default text colors */}
  <!-- Navigation Bar -->
  <nav class="bg-white dark:bg-slate-800 shadow-sm sticky top-0 z-50"> {/* Made nav sticky */}
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16 items-center">
        <div class="flex items-center">
          <a href="/" class="text-2xl font-bold text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 transition-colors">
            TrainedTails
          </a>
          <div class="hidden md:flex items-center ml-8 space-x-4">
            <a href="/" class="px-3 py-2 rounded-md text-sm font-medium text-slate-700 hover:text-blue-600 dark:text-slate-200 dark:hover:text-blue-400 transition-colors">Home</a>
            {/* Changed Blog from dropdown to direct link */}
            <a href="/blog" class="px-3 py-2 rounded-md text-sm font-medium text-slate-700 hover:text-blue-600 dark:text-slate-200 dark:hover:text-blue-400 transition-colors">Blog</a>
            <a href="/about" class="px-3 py-2 rounded-md text-sm font-medium text-slate-700 hover:text-blue-600 dark:text-slate-200 dark:hover:text-blue-400 transition-colors">About</a>
            <a href="/contact" class="px-3 py-2 rounded-md text-sm font-medium text-slate-700 hover:text-blue-600 dark:text-slate-200 dark:hover:text-blue-400 transition-colors">Contact</a>
          </div>
        </div>

        <div class="flex items-center space-x-4">
          <button id="mobile-menu-button" class="md:hidden p-2 rounded-lg text-slate-700 dark:text-slate-200 hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
          </button>
          
          {/* Complete Theme Toggle Button */}
          <button id="theme-toggle" class="p-2 rounded-lg text-slate-700 dark:text-slate-200 hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 hidden dark:block">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z"/>
            </svg>
            <svg class="w-6 h-6 block dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
            </svg>
          </button>
        </div>
      </div>
    </div>

    {/* Mobile Menu */}
    <div id="mobile-menu" class="hidden md:hidden absolute w-full bg-white dark:bg-slate-800 shadow-lg border-t border-slate-200 dark:border-slate-700"> {/* Added border */}
      <div class="px-2 pt-2 pb-3 space-y-1">
        <a href="/" class="block px-3 py-2 rounded-md text-base font-medium text-slate-700 dark:text-slate-200 hover:bg-slate-100 dark:hover:bg-slate-700">Home</a>
        {/* Changed Blog from dropdown to direct link */}
        <a href="/blog" class="block px-3 py-2 rounded-md text-base font-medium text-slate-700 dark:text-slate-200 hover:bg-slate-100 dark:hover:bg-slate-700">Blog</a>
        <a href="/about" class="block px-3 py-2 rounded-md text-base font-medium text-slate-700 dark:text-slate-200 hover:bg-slate-100 dark:hover:bg-slate-700">About</a>
        <a href="/contact" class="block px-3 py-2 rounded-md text-base font-medium text-slate-700 dark:text-slate-200 hover:bg-slate-100 dark:hover:bg-slate-700">Contact</a>
      </div>
    </div>
  </nav>

  <main class="flex-1">
    <slot />
  </main>

  {/* Footer */}
  <footer class="bg-slate-800 dark:bg-slate-900 text-slate-300 dark:text-slate-400"> {/* Adjusted footer text colors */}
    <div class="max-w-6xl mx-auto px-4 py-12 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div>
          <h3 class="text-lg font-semibold mb-4 text-white dark:text-slate-200">Training Guides</h3>
          <ul class="space-y-2">
					  <li><a href="/blog" class="hover:text-blue-300 dark:hover:text-blue-400 transition-colors">All Posts</a></li>
            <li><a href="/posts/post1" class="hover:text-blue-300 dark:hover:text-blue-400 transition-colors">Basic Training Guide</a></li>
            {/* Add other specific post links if desired, or link to /blog */}
             
          </ul>
        </div>
        <div>
          <h3 class="text-lg font-semibold mb-4 text-white dark:text-slate-200">Resources</h3>
          <ul class="space-y-2">
            <li><a href="/about" class="hover:text-blue-300 dark:hover:text-blue-400 transition-colors">About Us</a></li>
            <li><a href="/contact" class="hover:text-blue-300 dark:hover:text-blue-400 transition-colors">Contact</a></li>
            <li><a href="/privacy" class="hover:text-blue-300 dark:hover:text-blue-400 transition-colors">Privacy Policy</a></li>
            <li><a href="/terms" class="hover:text-blue-300 dark:hover:text-blue-400 transition-colors">Terms of Service</a></li>
          </ul>
        </div>
        <div class="md:col-span-2">
          <h3 class="text-lg font-semibold mb-4 text-white dark:text-slate-200">Newsletter</h3>
          <form class="flex flex-col sm:flex-row gap-2"> {/* Adjusted layout for smaller screens */}
            <input type="email" placeholder="Enter your email" 
                   class="flex-1 px-4 py-2 rounded-lg text-gray-900 dark:bg-slate-700 dark:text-white dark:placeholder-slate-400 border border-slate-300 dark:border-slate-600 focus:ring-blue-500 focus:border-blue-500">
            <button class="bg-blue-600 hover:bg-blue-700 dark:bg-blue-700 dark:hover:bg-blue-800 text-white px-6 py-2 rounded-lg transition-colors">
              Subscribe
            </button>
          </form>
        </div>
      </div>
      <div class="border-t border-slate-700 dark:border-slate-600 mt-8 pt-8 text-center text-sm text-slate-400 dark:text-slate-500"> {/* Adjusted font size */}
        <p>Â© 2025 TrainedTails.com - All rights reserved</p>
      </div>
    </div>
  </footer>

  <script>
    // Theme toggle
    const themeToggle = document.getElementById('theme-toggle');
    const htmlEl = document.documentElement;

    themeToggle.addEventListener('click', () => {
      const isDark = htmlEl.classList.toggle('dark');
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
    });

    // Mobile menu toggle
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    // Removed mobile blog toggle/menu variables as they are no longer needed

    mobileMenuButton.addEventListener('click', (e) => {
      e.stopPropagation(); // Prevent click from closing menu immediately
      mobileMenu.classList.toggle('hidden');
    });

    // Close menu when clicking outside
    document.addEventListener('click', (e) => {
      if (!mobileMenu.contains(e.target) && !mobileMenuButton.contains(e.target)) {
        mobileMenu.classList.add('hidden');
      }
    });

    // Close menu on link click (optional, good UX)
    mobileMenu.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
         mobileMenu.classList.add('hidden');
      });
    });

  </script>
</body>
</html>
