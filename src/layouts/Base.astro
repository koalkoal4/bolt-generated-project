---
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <link rel="stylesheet" href="/styles/global.css">
</head>
<body class="bg-gradient-to-b from-slate-50 to-blue-50 flex flex-col min-h-screen">
  <nav class="bg-white shadow-sm">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16 items-center">
        <a href="/" class="text-2xl font-bold text-blue-600">TrainedTails</a>
      </div>
    </div>
  </nav>

  <main class="flex-1">
    <slot />
  </main>

  <footer class="bg-slate-800 text-white">
    <div class="max-w-6xl mx-auto px-4 py-12 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div>
          <h3 class="text-lg font-semibold mb-4">Training Guides</h3>
          <ul class="space-y-2">
            <li><a href="/posts/puppy-socialization" class="hover:text-blue-300">Puppy Socialization</a></li>
            <li><a href="/posts/leash-training" class="hover:text-blue-300">Leash Training</a></li>
          </ul>
        </div>
        <div>
          <h3 class="text-lg font-semibold mb-4">Resources</h3>
          <ul class="space-y-2">
            <li><a href="/about" class="hover:text-blue-300">About Us</a></li>
            <li><a href="/contact" class="hover:text-blue-300">Contact</a></li>
            <li><a href="/privacy" class="hover:text-blue-300">Privacy Policy</a></li>
            <li><a href="/terms" class="hover:text-blue-300">Terms of Service</a></li>
          </ul>
        </div>
        <div class="md:col-span-2">
          <h3 class="text-lg font-semibold mb-4">Newsletter</h3>
          <form class="flex gap-2">
            <input type="email" placeholder="Enter your email" class="flex-1 px-4 py-2 rounded-lg text-gray-900">
            <button class="bg-blue-600 hover:bg-blue-700 px-6 py-2 rounded-lg transition-colors">Subscribe</button>
          </form>
        </div>
      </div>
      <div class="border-t border-slate-700 mt-8 pt-8 text-center text-slate-400">
        <p>Â© 2025 TrainedTails.com - All rights reserved</p>
      </div>
    </div>
  </footer>
</body>
</html>
