---
import BaseLayout from '../layouts/Base.astro';
---

<BaseLayout title="Contact Us">
  <main class="max-w-3xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold text-slate-800 mb-8">Get in Touch</h1>
    <div class="bg-white p-6 rounded-xl shadow-md">
      <form class="space-y-6">
        <div>
          <label class="block text-sm font-medium text-slate-700 mb-1">Name</label>
          <input type="text" class="w-full px-4 py-2 border rounded-lg">
        </div>
        <div>
          <label class="block text-sm font-medium text-slate-700 mb-1">Email</label>
          <input type="email" class="w-full px-4 py-2 border rounded-lg">
        </div>
        <div>
          <label class="block text-sm font-medium text-slate-700 mb-1">Message</label>
          <textarea class="w-full px-4 py-2 border rounded-lg h-32"></textarea>
        </div>
        <button class="bg-primary-600 text-white px-6 py-2 rounded-lg hover:bg-primary-700 transition-colors">
          Send Message
        </button>
      </form>
    </div>
  </main>
</BaseLayout>
